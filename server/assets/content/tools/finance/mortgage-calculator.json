{
  "toolName": "Mortgage Payment Calculator",
  "toolSlug": "mortgage-calculator",
  "categorySlug": "finance",
  "description": "Calculate monthly mortgage payments, total interest, and amortization schedules with advanced options.",
  "calculationLogic": "MORTGAGE_CALCULATOR",
  
  "ui": {
    "component": "generic",
    "layout": "multi-section",
    "theme": "finance"
  },
  
  "sections": [
    {
      "id": "home-value",
      "title": "Home Purchase Details",
      "description": "Enter the home price and down payment information",
      "required": true,
      "order": 1,
      "collapsible": false,
      "fields": [
        {
          "name": "homePrice",
          "label": "Home Price",
          "type": "number",
          "required": true,
          "min": 10000,
          "max": 50000000,
          "step": 1000,
          "placeholder": "Enter home purchase price",
          "units": {
            "category": "currency",
            "available": ["usd", "eur", "gbp"],
            "default": "usd",
            "allowCustom": false
          },
          "validation": {
            "min": 10000,
            "max": 50000000,
            "message": "Home price must be between $10,000 and $50,000,000"
          },
          "ui": {
            "display": "unit-selector",
            "position": "left",
            "showSymbol": true
          }
        },
        {
          "name": "downPayment",
          "label": "Down Payment",
          "type": "number",
          "required": true,
          "min": 0,
          "max": 50000000,
          "step": 1000,
          "placeholder": "Enter down payment amount",
          "units": {
            "category": "currency",
            "available": ["usd", "eur", "gbp"],
            "default": "usd",
            "allowCustom": false
          },
          "validation": {
            "min": 0,
            "max": 50000000,
            "message": "Down payment cannot exceed home price"
          },
          "ui": {
            "display": "unit-selector",
            "position": "left",
            "showSymbol": true
          }
        },
        {
          "name": "downPaymentPercent",
          "label": "Down Payment %",
          "type": "number",
          "required": false,
          "min": 0,
          "max": 100,
          "step": 0.1,
          "placeholder": "Optional: enter as percentage",
          "units": {
            "category": "percentage",
            "available": ["%"],
            "default": "%",
            "allowCustom": false
          },
          "validation": {
            "min": 0,
            "max": 100,
            "message": "Down payment percentage must be between 0% and 100%"
          },
          "ui": {
            "display": "unit-selector",
            "position": "right",
            "showSymbol": true
          }
        }
      ]
    },
    {
      "id": "loan-details",
      "title": "Loan Specifications",
      "description": "Configure your mortgage loan terms",
      "required": true,
      "order": 2,
      "collapsible": false,
      "fields": [
        {
          "name": "interestRate",
          "label": "Annual Interest Rate",
          "type": "number",
          "required": true,
          "min": 0.1,
          "max": 30,
          "step": 0.01,
          "placeholder": "Enter annual interest rate",
          "units": {
            "category": "percentage",
            "available": ["%"],
            "default": "%",
            "allowCustom": false
          },
          "validation": {
            "min": 0.1,
            "max": 30,
            "message": "Interest rate must be between 0.1% and 30%"
          },
          "ui": {
            "display": "unit-selector",
            "position": "right",
            "showSymbol": true
          }
        },
        {
          "name": "loanTerm",
          "label": "Loan Term",
          "type": "number",
          "required": true,
          "min": 1,
          "max": 50,
          "step": 1,
          "placeholder": "Enter loan term",
          "units": {
            "category": "time",
            "available": ["year", "month"],
            "default": "year",
            "allowCustom": false
          },
          "validation": {
            "min": 1,
            "max": 50,
            "message": "Loan term must be between 1 and 50 years"
          },
          "ui": {
            "display": "unit-selector",
            "position": "right",
            "showSymbol": true
          }
        }
      ]
    },
    {
      "id": "advanced-options",
      "title": "Advanced Options",
      "description": "Optional parameters for detailed calculations",
      "required": false,
      "order": 3,
      "collapsible": true,
      "defaultCollapsed": true,
      "fields": [
        {
          "name": "extraPayment",
          "label": "Extra Monthly Payment",
          "type": "number",
          "required": false,
          "min": 0,
          "max": 10000,
          "step": 10,
          "placeholder": "Enter extra monthly payment",
          "units": {
            "category": "currency",
            "available": ["usd", "eur", "gbp"],
            "default": "usd",
            "allowCustom": false
          },
          "validation": {
            "min": 0,
            "max": 10000,
            "message": "Extra payment must be between $0 and $10,000"
          },
          "ui": {
            "display": "unit-selector",
            "position": "left",
            "showSymbol": true
          },
          "conditional": {
            "showWhen": "loanTerm > 10"
          }
        },
        {
          "name": "yearlyIncrease",
          "label": "Yearly Payment Increase",
          "type": "number",
          "required": false,
          "min": 0,
          "max": 20,
          "step": 0.1,
          "placeholder": "Enter yearly increase percentage",
          "units": {
            "category": "percentage",
            "available": ["%"],
            "default": "%",
            "allowCustom": false
          },
          "validation": {
            "min": 0,
            "max": 20,
            "message": "Yearly increase must be between 0% and 20%"
          },
          "ui": {
            "display": "unit-selector",
            "position": "right",
            "showSymbol": true
          }
        },
        {
          "name": "propertyTax",
          "label": "Annual Property Tax",
          "type": "number",
          "required": false,
          "min": 0,
          "max": 100000,
          "step": 100,
          "placeholder": "Enter annual property tax",
          "units": {
            "category": "currency",
            "available": ["usd", "eur", "gbp"],
            "default": "usd",
            "allowCustom": false
          },
          "validation": {
            "min": 0,
            "max": 100000,
            "message": "Property tax must be between $0 and $100,000"
          },
          "ui": {
            "display": "unit-selector",
            "position": "left",
            "showSymbol": true
          }
        },
        {
          "name": "homeInsurance",
          "label": "Annual Home Insurance",
          "type": "number",
          "required": false,
          "min": 0,
          "max": 50000,
          "step": 100,
          "placeholder": "Enter annual insurance cost",
          "units": {
            "category": "currency",
            "available": ["usd", "eur", "gbp"],
            "default": "usd",
            "allowCustom": false
          },
          "validation": {
            "min": 0,
            "max": 50000,
            "message": "Home insurance must be between $0 and $50,000"
          },
          "ui": {
            "display": "unit-selector",
            "position": "left",
            "showSymbol": true
          }
        }
      ]
    }
  ],
  
  "outputs": [
    {
      "name": "monthlyPayment",
      "label": "Monthly Payment (P&I)",
      "type": "number",
      "precision": 2,
      "unit": "usd",
      "section": "primary",
      "units": {
        "category": "currency",
        "available": ["usd", "eur", "gbp"],
        "default": "usd"
      }
    },
    {
      "name": "totalPayment",
      "label": "Total Payment",
      "type": "number",
      "precision": 2,
      "unit": "usd",
      "section": "primary",
      "units": {
        "category": "currency",
        "available": ["usd", "eur", "gbp"],
        "default": "usd"
      }
    },
    {
      "name": "totalInterest",
      "label": "Total Interest",
      "type": "number",
      "precision": 2,
      "unit": "usd",
      "section": "secondary",
      "units": {
        "category": "currency",
        "available": ["usd", "eur", "gbp"],
        "default": "usd"
      }
    },
    {
      "name": "loanAmount",
      "label": "Loan Amount",
      "type": "number",
      "precision": 2,
      "unit": "usd",
      "section": "secondary",
      "units": {
        "category": "currency",
        "available": ["usd", "eur", "gbp"],
        "default": "usd"
      }
    },
    {
      "name": "downPaymentPercent",
      "label": "Down Payment %",
      "type": "number",
      "precision": 1,
      "unit": "%",
      "section": "secondary"
    },
    {
      "name": "payoffTime",
      "label": "Payoff Time (with extra payments)",
      "type": "number",
      "precision": 1,
      "unit": "years",
      "section": "tertiary",
      "conditional": {
        "showWhen": "extraPayment > 0"
      }
    }
  ],
  
  "seo": {
    "dataset": "/datasets/finance/mortgage-calculator-data.json",
    "keywords": ["mortgage calculator", "home loan", "monthly payment", "interest rate", "amortization"],
    "metaDescription": "Calculate your monthly mortgage payment, total interest, and amortization schedule. Free mortgage calculator with advanced options.",
    "scenarios": [
      "first-time-buyer",
      "refinance-scenario",
      "jumbo-loan",
      "fha-loan",
      "va-loan"
    ]
  },
  
  "features": {
    "unitConversion": true,
    "amortizationSchedule": true,
    "extraPayments": true,
    "taxInsuranceCalculation": true,
    "comparisonMode": false,
    "exportResults": true
  }
}

